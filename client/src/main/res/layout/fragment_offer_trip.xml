<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_offer_trip"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <org.croudtrip.location.MyAutoCompleteTextView
            android:id="@+id/destination"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="@string/join_choose_destination"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:id="@+id/name"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:id="@+id/address"
            android:minWidth="200dp"
            android:hint="Enter address"
            android:layout_gravity="center_horizontal"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:id="@+id/attributions"
            android:layout_gravity="center_horizontal"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/diversion"
            android:inputType="number"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/offer_max_diversion"
            fab:met_floatingLabel="normal"
            android:layout_gravity="center_horizontal" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/price"
            android:inputType="number"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="@string/price"
            android:text="0.26"
            fab:met_floatingLabel="normal"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offer_trip"
            android:id="@+id/offer"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Cars"
            android:id="@+id/my_car"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
