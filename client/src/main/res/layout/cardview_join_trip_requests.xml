<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_join_trip_requests"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageButton
            android:id="@+id/btn_join_trip_request_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_done_black_24dp"
            android:background="@drawable/button_join_trip_request_yes"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>

        <ImageButton
            android:id="@+id/btn_join_trip_request_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_black_24dp"
            android:background="@drawable/button_join_trip_request_no"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/tv_join_trip_requests_passenger_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_join_trip_request_no"
            android:layout_toEndOf="@id/btn_join_trip_request_no"
            android:layout_toLeftOf="@id/btn_join_trip_request_yes"
            android:layout_toStartOf="@id/btn_join_trip_request_yes"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_join_trip_requests_passenger_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_join_trip_requests_passenger_name"
            android:layout_toRightOf="@id/btn_join_trip_request_no"
            android:layout_toEndOf="@id/btn_join_trip_request_no"
            android:layout_toLeftOf="@id/btn_join_trip_request_yes"
            android:layout_toStartOf="@id/btn_join_trip_request_yes"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:gravity="center_vertical"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
