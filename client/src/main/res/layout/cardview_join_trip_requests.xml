<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_join_trip_requests"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <ImageButton
            android:id="@+id/btn_join_trip_request_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/green_arrow"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/btn_join_trip_request_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/red_arrow"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_join_trip_requests_user_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/profile"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_toRightOf="@id/btn_join_trip_request_no"
            android:layout_toEndOf="@id/btn_join_trip_request_no"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_join_trip_requests_user_image"
            android:layout_toEndOf="@id/iv_join_trip_requests_user_image"
            android:layout_toLeftOf="@id/btn_join_trip_request_yes"
            android:layout_toStartOf="@id/btn_join_trip_request_yes"
            android:gravity="center_vertical"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/tv_join_trip_requests_passenger_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_join_trip_requests_passenger_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_join_trip_requests_passenger_name"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_join_trip_requests_earnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_join_trip_requests_passenger_location"/>

            <TextView
                android:id="@+id/tv_join_trip_requests_diversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_join_trip_requests_passenger_location"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/tv_join_trip_requests_earnings"
                android:layout_toStartOf="@id/tv_join_trip_requests_earnings"
                android:text="@string/join_trip_requests_diversion_loading"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
